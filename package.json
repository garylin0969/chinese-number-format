{
    "name": "chinese-number-format",
    "version": "2.0.3",
    "description": "Powerful Chinese numeral conversion library (Normal, Financial, Currency, Date, Fraction)",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/cjs/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "engines": {
        "node": ">=14.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build:cjs": "tsc -p tsconfig.json",
        "build:esm": "tsc -p tsconfig.esm.json",
        "build": "pnpm run build:cjs && pnpm run build:esm",
        "prepare": "pnpm run build",
        "test": "jest",
        "prepublishOnly": "pnpm run test && pnpm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/garylin0969/chinese-number-format.git"
    },
    "homepage": "https://github.com/garylin0969/chinese-number-format#readme",
    "bugs": {
        "url": "https://github.com/garylin0969/chinese-number-format/issues"
    },
    "keywords": [
        "chinese",
        "number",
        "format",
        "currency",
        "finance",
        "upper-case",
        "traditional",
        "simplified",
        "convert",
        "money",
        "fraction",
        "date",
        "typescript",
        "javascript",
        "vue",
        "react",
        "nextjs",
        "angular",
        "數字轉中文",
        "大寫金額",
        "貨幣格式化",
        "年份轉換",
        "數字縮寫"
    ],
    "author": {
        "name": "GaryLin",
        "email": "garylin0969@gmail.com"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    }
}